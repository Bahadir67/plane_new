# ============================================
# Plane Turkish Edition - Railway Environment Variables
# ============================================
# Bu dosyayı kopyalayarak Railway'de environment variables olarak kullanın
# Railway'in ${{Service.VARIABLE}} syntax'ını destekler

# ============================================
# DATABASE (Railway PostgreSQL)
# ============================================
# Railway otomatik olarak DATABASE_URL sağlar
DATABASE_URL=${{Postgres.DATABASE_URL}}

# ============================================
# REDIS (Railway Redis)
# ============================================
# Railway otomatik olarak REDIS_URL sağlar
REDIS_URL=${{Redis.REDIS_URL}}

# ============================================
# TEMEL AYARLAR
# ============================================
DEBUG=0
SECRET_KEY=your-super-secret-key-min-50-characters-long-change-this

# Gunicorn worker sayısı (API servisi için)
GUNICORN_WORKERS=2

# ============================================
# URL AYARLARI
# ============================================
# Railway domain'lerinizi buraya yazın
# Örnek: https://plane-web-production.up.railway.app

WEB_URL=https://your-web-service.railway.app
ADMIN_BASE_URL=https://your-admin-service.railway.app
ADMIN_BASE_PATH=/god-mode
SPACE_BASE_URL=https://your-space-service.railway.app
SPACE_BASE_PATH=/spaces
LIVE_BASE_URL=https://your-live-service.railway.app
LIVE_BASE_PATH=/live
APP_BASE_URL=https://your-web-service.railway.app
APP_BASE_PATH=

# ============================================
# CORS AYARLARI
# ============================================
CORS_ALLOWED_ORIGINS=https://your-web-service.railway.app,https://your-admin-service.railway.app,https://your-space-service.railway.app

# ============================================
# S3 DEPOLAMA (Cloudflare R2 Örneği)
# ============================================
USE_MINIO=0
AWS_REGION=auto
AWS_ACCESS_KEY_ID=your-r2-access-key-id
AWS_SECRET_ACCESS_KEY=your-r2-secret-access-key
AWS_S3_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com
AWS_S3_BUCKET_NAME=plane-uploads
BUCKET_NAME=plane-uploads
FILE_SIZE_LIMIT=5242880
SIGNED_URL_EXPIRATION=3600
MINIO_ENDPOINT_SSL=0

# ============================================
# LIVE SERVER (Gerçek Zamanlı İşbirliği)
# ============================================
LIVE_SERVER_SECRET_KEY=your-live-server-secret-key-min-32-characters

# ============================================
# API RATE LIMITING
# ============================================
API_KEY_RATE_LIMIT=60/minute

# ============================================
# VITE BUILD VARIABLES (Frontend Servisleri İçin)
# ============================================
VITE_API_BASE_URL=https://your-api-service.railway.app
VITE_ADMIN_BASE_URL=https://your-admin-service.railway.app
VITE_ADMIN_BASE_PATH=/god-mode
VITE_SPACE_BASE_URL=https://your-space-service.railway.app
VITE_SPACE_BASE_PATH=/spaces
VITE_LIVE_BASE_URL=https://your-live-service.railway.app
VITE_LIVE_BASE_PATH=/live
VITE_WEB_BASE_URL=https://your-web-service.railway.app

# ============================================
# OPSIYONEL - EMAIL (SMTP)
# ============================================
# E-posta bildirimleri için SMTP ayarları
# EMAIL_HOST=smtp.gmail.com
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# EMAIL_PORT=587
# EMAIL_USE_TLS=1
# EMAIL_FROM=noreply@yourdomain.com

# ============================================
# OPSIYONEL - OPENAI (AI Özellikleri)
# ============================================
# OPENAI_API_KEY=sk-your-openai-api-key
# GPT_ENGINE=gpt-4

# ============================================
# DİĞER AYARLAR
# ============================================
# Silinen dosyaların kalıcı olarak silinmeden önce bekleyeceği gün sayısı
HARD_DELETE_AFTER_DAYS=60

# Telemetry (opsiyonel - kapatmak için)
NEXT_TELEMETRY_DISABLED=1
TURBO_TELEMETRY_DISABLED=1
